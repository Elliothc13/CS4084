<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/zellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgView_proPic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_pic">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imgView_proPic"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="New User"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:text="11hrs ago"
                android:textColor="@color/dark_grey"></TextView>

        </LinearLayout>




    </RelativeLayout>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zellay1"
        android:layout_marginTop="15dp"
        android:text="This is status"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imgView_postPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_status"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/Workout_plan" />

    <RelativeLayout
        android:id="@+id/zellay2"
        android:layout_below="@+id/imgView_postPic"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/thumbs_up">

        </ImageView>
        <TextView
            android:id ="@+id/upvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp">

        </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="comment"/>

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/ImgLine"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/zellay2"
        android:layout_marginTop="10dp"
        android:background="@color/light_grey"/>
</RelativeLayout>
